<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="utf-8">
    <title>Projeto NetShoes</title>
    <meta name="description" content="Projeto NetShoes">
    <meta name="author" content="Edson Luiz Fragnan">
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="stylesheets/style.css" type="text/css" />
    <script src="javascripts/script.js"></script>
  </head>

  <body>
    <div class="container">
      <div id="carrinhoCompras">
        <span id="carrinho">0</span>
        <img src="images/carrinho.jpg" alt="carrinho" style="width:15%">
      </div>
      <hr />
      <div class="row">
        <% produtos.forEach(function(produto) { %>
          <div class="col-xs-6 col-lg-4 thumbnail">
              <img src="images/corinthians.jpg" class="imagem" alt="Corinthians" style="width:50%">
              <p class="descProduto"><%- produto.produto %></p>
              <p class="precProduto"><%- produto.moeda %> <span class="valProduto"><strong><%- produto.preco %></strong></span></p>
              <p class="parcelas">ou 3 x <%- produto.moeda %> 30,80</p>
              <input type="button" class="btn btn-default btnComprar" onclick="add();" value="Comprar" />
          </div>
        <% }); %>
      </div>
    </div>

    <div id="myModal" class="modal">
      <div class="modal-content">
        <span class="close">Ã—</span>
        <h3>Produtos</h3>
        <hr />
        <div id="prodCarrinho">

        </div>
      </div>
    </div>
    <script src="javascripts/scriptModal.js"></script>
  </body>
</html>
